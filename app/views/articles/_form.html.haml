= simple_form_for @article do |f|
  = f.input :title, input_html: { class: "span8", id: "article-title" }
  = f.input :tag, input_html: { class: "span5", id: "article-tag" }
  = f.input :body, input_html: { class: "span8", id: "article-body" }
  = f.submit
  - if !@article.id.nil?
    = link_to 'Delete',
        article_path(@article),
        :method => :delete,
        :confirm => 'Are you sure you wish to delete this listing?',
        :class => 'btn btn-danger'

  =link_to "Markdown Helper", "http://daringfireball.net/projects/markdown/basics"

%hr

%h1#title-preview
%p.lead#tag-preview= @article.tag
%hr
#body-preview